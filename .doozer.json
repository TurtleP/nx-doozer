{
    "targets": {
        "lovepotion": {
            "buildenv": "docker:devkitpro/devkita64",
            
            "builddeps": [
                "sudo"
            ],

            "buildcmd": [
                "git clone ${LIBNX}",
                "cd libnx",
                "sudo -E make install",
                "cd ..",
                "make -j${PARALLEL}"
            ],

            "environment": {
                "LIBNX": "https://github.com/switchbrew/libnx",
                "DEVKITPRO": "/opt/devkitpro",
                "MYBUILDID": "${REVISION}"
            },

            "artifacts": [
                "*.nro"
            ]
        }
    }
}