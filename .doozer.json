{
  "targets": {
    "doozer-nx": {
      "buildenv": "xenial-amd64",
      "builddeps": [
        "build-essential",
        "liblz4-dev",
        "wget",
        "git",
        "docker"
      ],
      "buildcmd": [
        "wget ${UPDATEURL}",
        "sudo -E perl devkitA64update.pl",
        "wget ${PACMANURL}",
        "sudo -E dpkg -i devkitpro-pacman.deb",
        "sudo -E dkp-pacman -S switch-sdl2",
        "make"
      ],
      "environment": {
        "DEVKITPRO": "/opt/devkitpro",
        "DEVKITA64": "/opt/devkitpro/devkitA64",
        "UPDATEURL": "https://raw.githubusercontent.com/devkitPro/installer/master/perl/devkitA64update.pl",
        "PACMANURL": "https://github.com/devkitPro/pacman/releases/download/v1.0.0/devkitpro-pacman.deb"
      },
      "artifacts": [
        "*.nro"
      ]
    }
  }
}