{
	"targets": {
		"lovepotion": {
			"buildenv": "xenial-amd64",
			"builddeps": [
				"build-essential",
				"liblz4-dev",
				"wget",
				"p7zip-full",
				"git"
			],
			"buildcmd": [
				"mkdir ${DEVKITPRO} && mkdir ${DEVKITA64}",
				"wget -O devkita64.7z ${DEVKITURL}",
				"7z x -y devkita64.7z",
				"cp -r devkita64/* ${DEVKITA64}",
				"wget https://raw.githubusercontent.com/devkitPro/installer/master/perl/devkitA64update.pl",
				"perl devkitA64update.pl",
				"make"
			],
			"environment": {
				"DEVKITPRO": "/project/devkitPro",
				"DEVKITA64": "/project/devkitPro/devkitA64",
				"DEVKITURL": "https://downloads.sourceforge.net/project/devkitpro/devkitA64/alpha7/devkitA64_a7-x86_64-linux.7z"
			}
		}
	}
}
