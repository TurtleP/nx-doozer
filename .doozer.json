{
    "targets": {
        "lovepotion": {
            "buildenv": "docker:devkitpro/devkita64",
            
            "buildcmd": [
				"git clone ${LIBNX}",
				"cd libnx",
				"make && make install",
				"make -j${PARALLEL}"
			],

            "environment": {
				"LIBNX": "https://github.com/switchbrew/libnx",
                "DEVKITPRO": "/opt/devkitpro",
                "MYBUILDID": "${REVISION}"
            },

            "artifacts": [
                "*.nro"
            ]
        }
    }
}